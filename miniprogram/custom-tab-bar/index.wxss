/* 自定义 TabBar：更大的字体与加粗，统一审美 */
.tabbar {
  position: fixed;
  left: 0; right: 0; bottom: 0;
  height: 110rpx;
  display: flex;
  background: #F7F7F7;
  border-top: 1rpx solid #eaeaea;
  z-index: 9999;
  padding-bottom: env(safe-area-inset-bottom);
}
.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.tab-text {
  font-size: 28rpx; /* 比默认更大 */
  font-weight: 700; /* 加粗 */
  color: #333;
}
.tab-item.active .tab-text {
  color: #007AFF;
}