/* 列表卡片优化 (复用 practice/index.wxss) */
.question-card {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  transition: all 0.2s cubic-bezier(0.25, 0.8, 0.25, 1);
  margin: 16rpx 24rpx;
  
  min-height: 80rpx;
  padding: 24rpx 32rpx;

  border-radius: var(--radius-tight, 10rpx);
  background: var(--card-bg, #fff);
  border: 1rpx solid rgba(0,0,0,0.03);
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
  overflow: hidden;
}

.question-card::before {
  content: '';
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  width: var(--qbar-width, 8rpx);
  background: currentColor;
  opacity: 0.15;
  border-top-right-radius: var(--radius-tight, 10rpx);
  border-bottom-right-radius: var(--radius-tight, 10rpx);
}

.question-card:active {
  transform: scale(0.99);
  background: rgba(0,0,0,0.02);
}

.q-number {
  font-family: var(--font-serif, 'Times New Roman', Georgia, 'Noto Serif SC', 'Noto Serif CJK SC', 'Source Han Serif SC', 'Songti SC', 'STSong', SimSun, serif);
  font-weight: 800;
  font-size: var(--font-lg);
  color: var(--text-main, #2C3E50);
  letter-spacing: 0.5rpx;
}

.list-star {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.chevron {
  width: 14rpx;
  height: 14rpx;
  border-top: 4rpx solid var(--text-secondary, #7F8C8D);
  border-right: 4rpx solid var(--text-secondary, #7F8C8D);
  transform: rotate(45deg);
  opacity: 0.6;
}
