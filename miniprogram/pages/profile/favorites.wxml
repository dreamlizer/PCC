<view class="page {{fadeClass}} {{fontScaleClass}}" style="background: {{theme.pageBg}}; --icf-blue: {{theme.heroFrom}}; --icf-gold: {{theme.accentFrom}}; --icf-blue-rgb: {{theme.heroRgb}}; --icf-gold-rgb: {{theme.accentRgb}};">
  <hero-header theme="{{theme}}" title="我的收藏" subtitle="My Favorites" />

  <scroll-view scroll-y style="height: calc(100vh - 240rpx);">
    <block wx:for="{{list}}" wx:key="id">
      <view class="question-card" bindtap="openDetail" data-id="{{item.id}}" data-idx="{{index}}" style="color: {{theme.heroFrom}};">
        <view class="row space-between">
          <view class="q-content">
            <view class="q-number"># {{item.display}}</view>
          </view>
          <view class="row">
            <image class="list-star" src="/images/icons/favorite-on.svg" mode="aspectFit"></image>
            <view class="chevron"></view>
          </view>
        </view>
      </view>
    </block>
    <view wx:if="{{list.length === 0}}" class="muted empty-hint">
      暂无收藏题目
    </view>
  </scroll-view>
</view>
