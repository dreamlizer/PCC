/* pages/profile/index.wxss */

/* 列表容器：增加神秘感与设计感 */
.menu-list {
  background: rgba(255, 255, 255, 0.95); /* 轻微透光 */
  border-radius: 24rpx; /* 更大的圆角 */
  overflow: hidden;
  margin: 24rpx;
  position: relative;
  backdrop-filter: blur(10px); /* 磨砂玻璃效果 (部分机型支持) */
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  /* 阴影由 WXML 动态注入颜色 */
}
.menu-list::before {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  height: 8rpx;
  background: linear-gradient(90deg, var(--accent-from, var(--icf-gold, #ffbf3f)) 0%, var(--accent-to, var(--icf-gold, #ffbf3f)) 100%);
  opacity: 0.9;
}

/* 列表项 */
.menu-item {
  display: flex;
  align-items: center;
  padding: 36rpx 32rpx; /* 增加高度 */
  background: transparent;
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  position: relative;
}
.menu-item::before {
  content: '';
  position: absolute;
  left: 20rpx;
  top: 50%;
  width: 6rpx;
  height: 44rpx;
  transform: translateY(-50%);
  border-radius: 999rpx;
  background: rgba(var(--icf-gold-rgb, 255, 191, 63), 0.0);
}
.menu-item:active::before {
  background: var(--accent-from, rgba(var(--icf-gold-rgb, 255, 191, 63), 0.85));
  box-shadow: 0 10rpx 22rpx var(--accent-shadow, rgba(var(--icf-gold-rgb, 255, 191, 63), 0.22));
}

.menu-item:active {
  background: rgba(0, 0, 0, 0.02);
  transform: scale(0.995);
}

/* 列表分隔线：更加隐约 */
.menu-item:not(:last-child)::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 32rpx;
  right: 32rpx; /* 两端对齐 */
  height: 1rpx;
  background: linear-gradient(90deg, 
    rgba(0,0,0,0) 0%, 
    rgba(0,0,0,0.06) 10%, 
    rgba(0,0,0,0.06) 90%, 
    rgba(0,0,0,0) 100%
  );
}

/* 文字内容 */
.menu-content { 
  flex: 1; 
  font-weight: 600; /* 加粗一点 */
  font-size: var(--font-lg); 
  color: var(--text-main, #2C3E50);
  letter-spacing: 1rpx;
}

/* 右侧辅助信息 */
.menu-extra { 
  font-size: var(--font-md); 
  color: var(--text-secondary, #7F8C8D); 
  margin-right: 16rpx; 
  font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; /* 数字字体优化 */
}

/* 箭头：改为更精致的样式 */
.chevron {
  width: 12rpx;
  height: 12rpx;
  border-top: 3rpx solid var(--text-secondary, #7F8C8D);
  border-right: 3rpx solid var(--text-secondary, #7F8C8D);
  transform: rotate(45deg);
  transition: border-color 0.2s;
}
.menu-item:active .chevron {
  border-color: var(--text-secondary, #7F8C8D);
}

/* 字体控制区标签 */
.font-label {
  margin: 40rpx 32rpx 20rpx;
  font-size: var(--font-md);
  font-weight: 700;
  color: var(--text-secondary, #7F8C8D);
  text-transform: uppercase;
  letter-spacing: 2rpx;
  padding-left: 12rpx;
  border-left: 6rpx solid; /* 颜色由 inline style 控制 */
}

/* 字体分段控制器：悬浮胶囊风格 */
.font-control {
  display: flex;
  background: var(--page-bg, #F0F2F5);
  padding: 10rpx;
  border-radius: 999rpx; /* 全圆角 */
  margin: 0 24rpx 48rpx;
  box-shadow: inset 0 2rpx 6rpx rgba(0,0,0,0.04);
  border: 1rpx solid rgba(var(--icf-gold-rgb, 255, 191, 63), 0.28);
}

.font-segment {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: var(--font-md);
  font-weight: 600;
  color: var(--text-secondary, #7F8C8D);
  border-radius: 999rpx;
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1); /* 弹性动画 */
  position: relative;
  z-index: 1;
}

.font-segment.active {
  background: var(--card-bg, #fff);
  color: var(--text-main, #2C3E50);
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
  transform: scale(1.05);
  z-index: 2;
}

/* 主题选择弹窗样式保持不变 */
.theme-row { display: flex; align-items: center; padding: 12rpx 0; }
.theme-chip { width: 56rpx; height: 32rpx; border-radius: 999rpx; margin-right: 16rpx; box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.08); }
.theme-name { flex: 1; font-weight: 600; }
.theme-check { width: 40rpx; text-align: right; color: var(--icf-gold, #ffbf3f); font-weight: 700; }
