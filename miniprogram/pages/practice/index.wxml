<view class="page {{fadeClass}} {{fontScaleClass}}" style="background: {{theme.pageBg}}; --icf-blue: {{theme.heroFrom}}; --icf-gold: {{theme.accentFrom}}; --icf-blue-rgb: {{theme.heroRgb}}; --icf-gold-rgb: {{theme.accentRgb}};">
  <hero-header theme="{{theme}}" title="逐题解析" subtitle="按题号排列，黄色星星代表已收藏" />

  <scroll-view scroll-y style="height: calc(100vh - 240rpx);">
    <block wx:for="{{list}}" wx:key="id">
      <view
        class="question-card {{item.favored ? 'is-favored' : ''}}"
        bindtap="openDetail"
        data-id="{{item.id}}"
      >
        <view class="q-bar"></view>
        <view class="row space-between">
          <view class="q-content">
            <view class="q-number"># {{item.number}}</view>
          </view>
          <view class="row">
            <image wx:if="{{item.favored}}" class="list-star" src="/images/icons/favorite-on.svg" mode="aspectFit"></image>
            <view class="chevron"></view>
          </view>
        </view>
      </view>
    </block>
    <view wx:if="{{!list.length}}" class="card">
      <view class="muted empty-hint">暂未加载到题目，请稍候或检查云环境。</view>
    </view>
  </scroll-view>
</view>
