/* 列表卡片优化 */
.card.question-card {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  transition: all 0.2s cubic-bezier(0.25, 0.8, 0.25, 1);
  margin: 16rpx 24rpx;

  min-height: 40rpx;
  padding: 18rpx 32rpx 18rpx 44rpx;

  border-radius: var(--radius-tight, 10rpx); /* 收敛圆角，更利落 */
  background: #fff;                          /* 确保背景纯白 */
  border: 1rpx solid rgba(0,0,0,0.03);       /* 极细微边框 */
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04); /* 统一柔和阴影 */
  color: var(--text-main);
  overflow: hidden;
}

.q-bar {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  width: var(--qbar-width, 8rpx);
  background: var(--icf-blue, #060E9F);
  border-top-left-radius: var(--radius-tight, 10rpx);
  border-bottom-left-radius: var(--radius-tight, 10rpx);
}

.question-card.is-favored .q-bar {
  background: var(--icf-gold, #ffbf3f);
}

.question-card .row {
  position: relative;
  z-index: 1;
}

.question-card:active {
  transform: scale(0.99);
  background: #FAFAFA;
}

.q-number {
  font-family: 'Times New Roman', Georgia, 'Songti SC', 'STSong', SimSun, serif;
  font-weight: 800;
  font-size: 34rpx;
  color: #111;
  letter-spacing: 0.5rpx;
}

.list-star {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.chevron {
  width: 14rpx;
  height: 14rpx;
  border-top: 4rpx solid rgba(0,0,0,0.22);
  border-right: 4rpx solid rgba(0,0,0,0.22);
  transform: rotate(45deg);
  opacity: 0.35;
}

.muted {
  text-align: center;
  margin-top: 48rpx;
  color: #95A5A6;
  font-size: 26rpx;
}
