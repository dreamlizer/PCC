/* pages/practice/detail.wxss */

.option-text {
  font-size: calc(var(--font-lg) - 2rpx);
}

.option-card.is-correct-best .option-text {
  background: #EAF7EE;
  padding: 10rpx 12rpx;
  border-radius: 10rpx;
}

.option-card.is-correct-worst .option-text {
  background: #FFECEE;
  padding: 10rpx 12rpx;
  border-radius: 10rpx;
}

.accordion { padding-top: 12rpx; }
.divider { height: 1rpx; background: rgba(0,0,0,0.06); margin-top: 12rpx; }

/* 主按钮：解析按钮常态与禁用态（保持渐变背景，仅改变文字颜色） */
.btn[disabled] { opacity: 1; }
.analyze-btn { border-radius: 12rpx; }
.analyze-btn[disabled] { color: rgba(255,255,255,0.5); }

/* 解析摘要的轻量外观，不占空间但与正文有区分 */
.analysis-recap { font-size: var(--font-sm); color: #333; background: #F5F5F5; padding: 10rpx 12rpx; border-radius: 8rpx; }
