/* pages/framework/index.wxss */
.page { background: #F7F9FC; }

/* 头部区：渐变与专业配色 */
.hero {
  padding: 40rpx 32rpx 24rpx;
  background: linear-gradient(135deg, #1F2A44 0%, #2FB3A9 100%);
  color: #fff;
}
.hero .h1 {
  font-size: 36rpx;
  font-weight: 600;
}
.hero .sub {
  margin-top: 12rpx;
  opacity: 0.9;
}

/* 卡片：紧凑布局与视觉层次 */
.card {
  margin: 12rpx 24rpx; /* 收紧间距 */
  padding: 20rpx 24rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 6rpx 18rpx rgba(31,42,68,0.08);
  border-left: 8rpx solid #2FB3A9; /* 品牌强调色 */
}
.card-tight { margin-bottom: 8rpx; }

.row { display: flex; align-items: center; }
.badge {
  min-width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 999rpx;
  background: #1F2A44;
  color: #fff;
  font-weight: 600;
  margin-right: 16rpx;
}
.title { font-size: 30rpx; font-weight: 600; color: #1A1A1A; }
.text { margin-top: 10rpx; color: #2F3136; line-height: 1.6; }

/* 分隔线（如需） */
.divider { height: 2rpx; background: #EEF2F7; margin: 10rpx 0; }