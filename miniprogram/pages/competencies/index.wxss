.page { padding: 0; }

.competency {
  margin: 16rpx 24rpx;
  padding: 24rpx;
  background: var(--card-bg, #fff);
  border-radius: 18rpx;
  box-shadow: 0 10rpx 24rpx rgba(0,0,0,0.06);
  border: 1rpx solid rgba(0,0,0,0.03);
}

.header { align-items: center; }
.header:active { opacity: 0.92; }

.badge {
  width: 44rpx;
  height: 44rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 800;
  color: #fff;
  background: var(--icf-blue, #060e9f);
  margin-right: 16rpx;
  flex: 0 0 auto;
}
.badge.is-intro {
  background: rgba(44, 62, 80, 0.12);
  color: var(--text-main, #2C3E50);
  border: 1rpx solid rgba(44, 62, 80, 0.18);
  font-weight: 700;
}

.title {
  font-size: var(--font-lg);
  font-weight: 800;
  color: var(--text-main, #2C3E50);
  line-height: 1.2;
}

.chevron {
  width: 14rpx;
  height: 14rpx;
  border-top: 4rpx solid var(--text-secondary, #7F8C8D);
  border-right: 4rpx solid var(--text-secondary, #7F8C8D);
  transform: rotate(45deg);
  opacity: 0.55;
  transition: transform 0.2s, opacity 0.2s;
}
.chevron.is-open {
  transform: rotate(135deg);
  opacity: 0.9;
}

.body {
  margin-top: 18rpx;
  padding-top: 18rpx;
  border-top: 1rpx solid rgba(0,0,0,0.06);
}

.definition {
  font-size: var(--font-md);
  line-height: 1.48;
  color: var(--text-main, #2C3E50);
  white-space: pre-wrap;
}

.label { font-weight: 800; }

.sublist { margin-top: 16rpx; }

.subitem {
  display: flex;
  gap: 14rpx;
  padding: 10rpx 0;
  border-top: 1rpx dashed rgba(0,0,0,0.06);
}
.subitem:first-child { border-top: none; }

.code {
  flex: 0 0 auto;
  font-weight: 800;
  color: var(--icf-blue, #060e9f);
  font-size: var(--font-sm);
}

.text {
  flex: 1 1 auto;
  color: var(--text-main, #2C3E50);
  font-size: var(--font-md);
  line-height: 1.48;
}
