/* pages/bossrush/index.wxss */
/* 页面基础 */
.page {
  min-height: 100vh;
  padding-bottom: 120rpx; /* 底部留白 */
  box-sizing: border-box;
}

/* 模式选择容器 */
.container-mode {
  padding: 24rpx;
}

/* 模式卡片 */
.card-mode {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06);
  border-left: 8rpx solid #ccc; /* 默认色，WXML会覆盖 */
  transition: all 0.2s;
  position: relative;
}

.card-mode:active {
  transform: scale(0.99);
  background: #fdfdfd;
}

/* 模式图标 */
.mode-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.icon-text {
  font-size: 36rpx;
  font-weight: 800;
  font-family: 'Courier New', Courier, monospace;
}

/* 模式信息 */
.mode-info {
  flex: 1;
}

.mode-title {
  font-size: 32rpx;
  font-weight: 700;
  color: currentColor;
  margin-bottom: 8rpx;
}

.mode-desc {
  font-size: 24rpx;
  color: #7f8c8d;
  line-height: 1.4;
}

/* 箭头 */
.chevron {
  width: 14rpx;
  height: 14rpx;
  border-top: 4rpx solid currentColor;
  border-right: 4rpx solid currentColor;
  transform: rotate(45deg);
  margin-left: 16rpx;
  opacity: 0.35;
}

/* 说明区 */
.mode-note {
  margin-top: 48rpx;
  padding: 0 16rpx;
}

/* ==========================================================================
   答题阶段样式 (复用练习详情页风格)
   ========================================================================== */

/* 题目卡片 */
.card {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
}

.option-text {
  font-size: 30rpx;
}

.label { font-weight: 700; }

.note-title {
  font-size: 26rpx;
  font-weight: 700;
  color: #95a5a6;
  margin-bottom: 16rpx;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.note-item {
  font-size: 24rpx;
  color: #bdc3c7;
  line-height: 1.8;
}

/* 幽灵按钮 */
.btn-ghost {
  background: rgba(0,0,0,0.05);
  color: #666;
  font-weight: 600;
  width: 100%;
}
