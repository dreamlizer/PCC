/* pages/bossrush/history.wxss */
/* 列表容器 - 玻璃拟态风格 */
.history-list {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  margin: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  overflow: hidden;
}

/* 单条记录 */
.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.03);
  transition: background 0.2s;
  position: relative;
}

.history-item:last-child {
  border-bottom: none;
}

.history-item:active {
  background: rgba(0,0,0,0.02);
}

/* 左侧信息区 */
.item-left {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.mode-badge {
  display: inline-flex;
  align-self: flex-start;
  font-size: var(--font-sm);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
}

.mode-seq {
  background: rgba(var(--icf-gold-rgb, 255, 191, 63), 0.12);
  color: var(--icf-gold, #ffbf3f);
}

.mode-random {
  background: rgba(var(--icf-blue-rgb, 6, 14, 159), 0.12);
  color: var(--icf-blue, #060e9f);
}

.score-row {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.score-val {
  font-size: calc(var(--font-hero) + 4rpx);
  font-weight: 800;
  color: var(--text-main, #2C3E50);
  line-height: 1;
}

.score-unit {
  font-size: var(--font-sm);
  color: var(--text-secondary, #7F8C8D);
}

.meta-info {
  font-size: var(--font-sm);
  color: var(--text-secondary, #7F8C8D);
  margin-top: 4rpx;
  display: flex;
  gap: 16rpx;
}

/* 右侧操作区 */
.item-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.btn-review {
  font-size: var(--font-md);
  padding: 12rpx 28rpx;
  border-radius: 32rpx;
  background: var(--card-bg, #fff);
  color: var(--icf-blue, #060e9f);
  border: 1rpx solid rgba(var(--icf-blue-rgb, 6, 14, 159), 0.35);
  font-weight: 600;
  transition: all 0.2s;
}

.btn-review--wheel {
  background: rgba(var(--icf-blue-rgb, 6, 14, 159), 0.08);
  border-color: rgba(var(--icf-blue-rgb, 6, 14, 159), 0.22);
}

.btn-review--disabled {
  opacity: 0.4;
  color: var(--text-secondary, #7F8C8D);
  border-color: rgba(0, 0, 0, 0.16);
  background: rgba(0, 0, 0, 0.02);
}

.btn-review--disabled:active {
  background: rgba(0, 0, 0, 0.02);
  color: var(--text-secondary, #7F8C8D);
}

.btn-review:active {
  background: var(--icf-blue, #060e9f);
  color: #fff;
}

/* 空状态 */
.empty-state {
  padding: 80rpx 0;
  text-align: center;
  color: var(--text-secondary, #7F8C8D);
  font-size: var(--font-md);
}
