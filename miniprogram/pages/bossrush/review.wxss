/* pages/bossrush/review.wxss */
/* 列表卡片优化 */
.question-card {
  position: relative;
  display: flex;
  align-items: center; /* 垂直居中 */
  justify-content: space-between;
  
  margin: 20rpx 24rpx;
  padding: 32rpx;
  
  border-radius: 20rpx;
  background: var(--card-bg, #fff);
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
  transition: all 0.2s cubic-bezier(0.25, 0.8, 0.25, 1);
}

.question-card:active {
  transform: scale(0.99);
  background: rgba(0,0,0,0.02);
}

/* 内容区 */
.card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* 标题 */
.title {
  font-size: var(--font-md);
  color: var(--text-main, #2C3E50);
  font-weight: 600;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

/* 状态行 */
.status-row {
  display: flex;
  align-items: center;
}

/* 徽章基础样式 */
.badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  
  font-size: var(--font-sm);
  font-weight: 600;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  
  transition: all 0.2s;
}

/* 完美徽章 (金/绿) */
.badge-perfect {
  background: linear-gradient(135deg, var(--icf-gold, #ffbf3f) 0%, var(--icf-gold, #ffbf3f) 100%);
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(var(--icf-gold-rgb, 255, 191, 63), 0.3);
  padding: 8rpx 20rpx;
}

/* 成功徽章 (绿) */
.badge-success {
  background: rgba(var(--icf-blue-rgb, 6, 14, 159), 0.08);
  color: var(--icf-blue, #060e9f);
  border: 1rpx solid rgba(var(--icf-blue-rgb, 6, 14, 159), 0.18);
}

/* 错误徽章 (红) */
.badge-error {
  background: rgba(var(--icf-gold-rgb, 255, 191, 63), 0.10);
  color: var(--icf-gold, #ffbf3f);
  border: 1rpx solid rgba(var(--icf-gold-rgb, 255, 191, 63), 0.22);
}

/* 右侧箭头 */
.chevron {
  width: 12rpx;
  height: 12rpx;
  border-top: 4rpx solid var(--text-secondary, #7F8C8D);
  border-right: 4rpx solid var(--text-secondary, #7F8C8D);
  transform: rotate(45deg);
  margin-left: 24rpx;
  flex-shrink: 0;
}

.ml-12 { margin-left: 12rpx; }
